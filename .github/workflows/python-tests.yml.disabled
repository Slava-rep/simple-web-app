name: Python Tests CI/CD

# on:
#   workflow_dispatch:
#     inputs:
#       python-version:
#         description: 'Python version'
#         required: false
#         default: '3.11'
      
on:
  push:
    branches: [ main, master ]
  pull_request:
    branches: [ main, master ]

jobs:
  test:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: [3.12]

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    # - name: Debug Python version input
    #   run: echo "Python version from matrix: ${{ matrix.python-version }}"
    
    - name: Set up Python ${{ matrix.python-version }}
      uses: actions/setup-python@v4
      with:
        python-version: ${{ matrix.python-version }}
    
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt
        
    - name: Install Chrome for Selenium
      run: |
        sudo apt-get update
        sudo apt-get install -y chromium-browser chromium-chromedriver
        
    # - name: Run tests with pytest
    #   env:
    #     PYTHONPATH: .
    #   run: |
    #     python -m pytest -v --html=test-report.html --self-contained-html

    - name: Start application
      run: |
        python app.py &
        sleep 5  # –ñ–¥–µ–º –∑–∞–ø—É—Å–∫–∞ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è

    - name: Run tests with pytest
      env:
        PYTHONPATH: .
      run: |
        python -m pytest tests/test_unit.py tests/test_integration.py -v --html=test-report-backend.html --self-contained-html
        python -m pytest tests/test_ui.py tests/test_simple_ui.py tests/test_advanced_ui.py -v --html=test-report-frontend.html --self-contained-html
        python -m pytest tests/test_api.py tests/test_with_running_app.py -v --html=test-report-api.html --self-contained-html    
    - name: Upload test results
      uses: actions/upload-artifact@v4
      with:
        name: test-results-python-${{ matrix.python-version }}
        path: |
          test-report.html
          .pytest_cache/

  deploy-notification:
    needs: test
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main'
    
    steps:
    - name: Notify success
      run: |
        echo "üéâ All tests passed! Ready for deployment."
        echo "Python versions tested: 3.12"
